<?xml version="1.0" encoding="UTF-8"?>
<CMS_MODULE>

  <CMS_GROUP tabs="top">

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Picture"/>
      </LANGINFOS>

      <FS_REFERENCE name="st_picture" hFill="yes" useLanguages="no">
        <FILTER>
          <ALLOW type="picture"/>
        </FILTER>
        <LANGINFOS>
          <LANGINFO lang="*" label="Picture"/>
          <LANGINFO lang="DE" label="Bild"/>
        </LANGINFOS>
        <PROJECTS>
          <LOCAL name=".">
            <SOURCES>
              <FOLDER name="root" store="mediastore"/>
            </SOURCES>
          </LOCAL>
        </PROJECTS>
      </FS_REFERENCE>

      <CMS_INPUT_RADIOBUTTON name="st_picturePosition" hFill="yes" useLanguages="no">
        <ENTRIES>
          <ENTRY value="left">
            <LANGINFOS>
              <LANGINFO lang="*" label="Left"/>
              <LANGINFO lang="DE" label="Links"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="right">
            <LANGINFOS>
              <LANGINFO lang="*" label="Right"/>
              <LANGINFO lang="DE" label="Rechts"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="center">
            <LANGINFOS>
              <LANGINFO lang="*" label="Center"/>
              <LANGINFO lang="DE" label="Zentriert"/>
            </LANGINFOS>
          </ENTRY>
        </ENTRIES>
        <LANGINFOS>
          <LANGINFO lang="*" label="Picture Position"/>
          <LANGINFO lang="DE" label="Bildposition"/>
        </LANGINFOS>
      </CMS_INPUT_RADIOBUTTON>

      <CMS_INPUT_RADIOBUTTON name="st_teaserVariation" hFill="yes">
        <ENTRIES>
          <ENTRY value="hero">
            <LANGINFOS>
              <LANGINFO lang="*" label="Hero Teaser"/>
              <LANGINFO lang="DE" label="Hero-Teaser"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="small">
            <LANGINFOS>
              <LANGINFO lang="*" label="Small Teaser"/>
              <LANGINFO lang="DE" label="Kleiner Teaser"/>
            </LANGINFOS>
          </ENTRY>
          <ENTRY value="action">
            <LANGINFOS>
              <LANGINFO lang="*" label="Call to Action Teaser"/>
              <LANGINFO lang="DE" label="Aktionsaufruf-Teaser"/>
            </LANGINFOS>
          </ENTRY>
        </ENTRIES>
        <LANGINFOS>
          <LANGINFO lang="*" label="Teaser Variation"/>
          <LANGINFO lang="DE" label="Teaservariante"/>
        </LANGINFOS>
      </CMS_INPUT_RADIOBUTTON>

    </CMS_GROUP>

    <CMS_GROUP>
      <LANGINFOS>
        <LANGINFO lang="*" label="Text"/>
      </LANGINFOS>

      <CMS_INPUT_TEXT name="st_title" hFill="yes" maxInputLength="50" singleLine="no" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Title"/>
          <LANGINFO lang="DE" label="Titel"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_TEXT name="st_subtitle" hFill="yes" maxInputLength="75" singleLine="no" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Subtitle"/>
          <LANGINFO lang="DE" label="Untertitel"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

      <CMS_INPUT_TEXTAREA name="st_teaserText" hFill="yes" maxInputLength="250" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Teaser text"/>
          <LANGINFO lang="DE" label="Teasertext"/>
        </LANGINFOS>
      </CMS_INPUT_TEXTAREA>

      <CMS_INPUT_LINK name="st_link" hFill="yes" mode="inline" useLanguages="no">
        <LANGINFOS>
          <LANGINFO lang="*" label="Link"/>
        </LANGINFOS>
        <LINKEDITORS>
          <LINKEDITOR name="category_link"/>
          <LINKEDITOR name="product_link"/>
          <LINKEDITOR name="search_link"/>
          <LINKEDITOR name="magazine_article_link"/>
          <LINKEDITOR name="content_link"/>
          <LINKEDITOR name="external_link"/>
        </LINKEDITORS>
      </CMS_INPUT_LINK>

      <CMS_INPUT_TEXT name="st_linkText" hFill="yes" singleLine="no" useLanguages="yes">
        <LANGINFOS>
          <LANGINFO lang="*" label="Button link text"/>
          <LANGINFO lang="DE" label="Button Verweistext"/>
        </LANGINFOS>
      </CMS_INPUT_TEXT>

    </CMS_GROUP>

  </CMS_GROUP>

</CMS_MODULE>